<?php
/**
 * Category view template
 *
 * @var $block \Magento\Catalog\Block\Category\View
 */
?>
<?php if ($_description = $block->getCurrentCategory()->getDescription()): ?>
    <div class="category-description">
        <?php /* @escapeNotVerified */ echo $this->helper('Magento\Catalog\Helper\Output')->categoryAttribute($block->getCurrentCategory(), $_description, 'description') ?>
    </div>
<?php endif; ?>

<?php if ($up_category_recommend_product = $block->getCurrentCategory()->getUpCategoryRecommendProduct()): ?>
    <div class="category-description">
        <?php /* @escapeNotVerified */ //echo $this->helper('Magento\Catalog\Helper\Output')->categoryAttribute($block->getCurrentCategory(), $up_category_recommend_product, 'up_category_recommend_product') ?>
		<?php 
			$skus = $this->helper('Magento\Catalog\Helper\Output')->categoryAttribute($block->getCurrentCategory(), $up_category_recommend_product, 'up_category_recommend_product');
			$skuArr = explode(',',$skus);
		?>
		 <?php foreach ($skuArr as $sku):?>
                <?php 
				    $objectManager =  \Magento\Framework\App\ObjectManager::getInstance();   
					$storeManager = $objectManager->get('\Magento\Store\Model\StoreManagerInterface');			
					$productRepository = $objectManager->get('\Magento\Catalog\Model\ProductRepository');
					$_productRecommend = $productRepository->get("".$sku."");
					echo $_productRecommend->getName().'<br/>';
					echo $_productRecommend->getFinalPrice().'<br/>';
					echo $storeManager->getStore()->getBaseUrl().'media/catalog/product'.$_productRecommend->getSmallImage().'<br/>';
					echo $storeManager->getStore()->getBaseUrl().$_productRecommend->getUrlKey().'.html'.'<br/>';
				?>
            <?php endforeach;?>
    </div>
<?php endif; ?>