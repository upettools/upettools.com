<script type="text/javascript" xml="space">
	require(['jquery', 'mage/mage'], function ($) {
			var dataForm = $('#wholesale-form');
			var ignore = null;
			dataForm.mage('validation', {
				ignore: ignore ? ':hidden:not(' + ignore + ')' : ':hidden'
			}).find('input:text').attr('autocomplete', 'off');

			//customize validation
			$('.submit').click(function (event) {
				$('#wholesale-form').mage('validation', {});
				if (document.getElementById("file").files[0]) {
					var fileSize = document.getElementById("file").files[0].size / 1024 / 1024;
					$('#upload_message .size').text(fileSize.toFixed(2) + ' MB.');
					if (fileSize > 100) {
						$('#upload_message .red').text("File size exceeds 100MB!");
						dataForm.validation('isValid'); // prevent submit
						return false;
					} else {
						$('#upload_message .red').text("");
					}
				} else {
					$('#upload_message span').text("");
				}
				if (!$('#verify_box').hasClass('success')) {
					$('#verify_message').text("Please slide it to validate!");
					dataForm.validation('isValid');
					return false;
				} else {
					$('#verify_message').text('');
				}
			});
			//Verify box
			var box = document.getElementById('verify_box');
			var xbox = document.getElementById('verify_xbox');
			var element = document.getElementById('btn');
			var b = box.offsetWidth;
			var o = element.offsetWidth;
			element.ondragstart = function () {
				return false;
			};
			element.onselectstart = function () {
				return false;
			};
			element.onmousedown = function (e) {
				var disX = e.clientX - element.offsetLeft;
				document.onmousemove = function (e) {
					var l = e.clientX - disX + o;
					if (l < o) {
						l = o
					}
					if (l > b) {
						l = b
					}
					xbox.style.width = l + 'px';
				};
				document.onmouseup = function (e) {
					var l = e.clientX - disX + o;
					if (l < b) {
						l = o
					} else {
						l = b;
						xbox.innerHTML = 'Validate Passed.<div id="btn"><img src="/pub/media/customize/success.png"/></div>';
						box.className = 'success';
					}
					xbox.style.width = l + 'px';
					document.onmousemove = null;
					document.onmouseup = null;
				};
			}
		}

	);
</script>