            <a class="lang" href="javascript:void(0);" title="Go to <?php echo $block->escapeHtml($_lang->getName()) ?>" data-post='<?php /* @escapeNotVerified */ echo $block->getTargetStorePostData($_lang); ?>'><?php echo $block->escapeHtml($_lang->getName()) ?></a>
        <?php endif; ?>
    <?php endforeach; ?>
